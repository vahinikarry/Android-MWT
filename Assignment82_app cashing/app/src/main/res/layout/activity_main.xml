<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.sampleandiosapp.assignment82.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Information"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/BtnSave"
        android:layout_marginTop="83dp"
        android:layout_below="@+id/EditTxtCity"
        android:layout_alignLeft="@+id/btnShow"
        android:layout_alignStart="@+id/btnShow"
        android:backgroundTint="@color/abc_btn_colored_borderless_text_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW"
        android:id="@+id/btnShow"
        android:layout_below="@+id/BtnSave"
        android:layout_toRightOf="@+id/EditTxtCity"
        android:layout_toEndOf="@+id/EditTxtCity"
        android:layout_marginTop="51dp"
        android:backgroundTint="@color/abc_btn_colored_borderless_text_material" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EdittxtName"
        android:text="Enter Name"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/EditTxtAge"
         />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EditTxtAge"
        android:text="Enter Age"
        android:layout_below="@+id/EdittxtName"
        android:layout_alignLeft="@+id/EditTxtPhone"

         />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EditTxtPhone"
        android:text="Enter Phone"
        android:layout_below="@+id/EditTxtAge"
       />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EditTxtCity"
        android:text="Enter City"
        android:layout_below="@+id/EditTxtPhone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
